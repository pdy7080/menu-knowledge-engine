# Menu Knowledge Engine - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================
# Database
# ===========================
DATABASE_URL=postgresql+asyncpg://menu_admin:menu_dev_2025@localhost:5432/menu_knowledge_db

# ===========================
# Application
# ===========================
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-random-secret-in-production

# ===========================
# CORS
# ===========================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================
# Redis Cache
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_ENABLED=true

# ===========================
# API Keys
# ===========================

# OpenAI (GPT-4o for AI Discovery)
OPENAI_API_KEY=sk-...

# Naver CLOVA OCR
CLOVA_OCR_API_KEY=your-clova-api-key
CLOVA_OCR_SECRET=your-clova-secret

# Naver Papago Translation
PAPAGO_CLIENT_ID=your-papago-client-id
PAPAGO_CLIENT_SECRET=your-papago-client-secret

# ===========================
# Storage (Optional)
# ===========================
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=menu-knowledge-bucket

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO
