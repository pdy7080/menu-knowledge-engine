# Menu Knowledge Engine - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://menu_admin:menu_dev_2025@localhost/menu_knowledge_db

# Security
SECRET_KEY=development-secret-key-change-in-production

# Debug Mode
DEBUG=True

# OpenAI API (for AI Discovery and Menu Parsing)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (for content enrichment - fallback when OpenAI billing limit reached)
# Get your API key from: https://aistudio.google.com/app/apikey (free tier)
# Cost: Free (no billing required)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Papago Translation API (for batch translation)
# Get your credentials from: https://developers.naver.com/apps
PAPAGO_CLIENT_ID=your_papago_client_id_here
PAPAGO_CLIENT_SECRET=your_papago_client_secret_here

# CLOVA OCR API (for menu image recognition - Sprint 3B)
# Get your credentials from: https://console.ncloud.com/
# Navigate to: AI·NAVER API → CLOVA OCR → Create Service
# See: docs/CLOVA_OCR_SETUP_GUIDE.md for detailed instructions
# Cost: ₩3 per request, ₩100,000 free credit for new users
CLOVA_OCR_SECRET=your_clova_ocr_secret_here
CLOVA_OCR_API_URL=https://kko5u71wza.apigw.ntruss.com/custom/v1/your_custom_id

# 한국도로공사 API (data.ex.co.kr - Sprint 0)
# 고속도로 휴게소 음식 메뉴 API
# 발급: https://data.ex.co.kr → 회원가입 → API 키 발급
PUBLIC_DATA_API_KEY=your_data_ex_co_kr_api_key_here

# 공공데이터포털 API (data.go.kr - Sprint 0)
# 식품영양성분DB (15127578) 등
# 발급: https://www.data.go.kr → 회원가입 → 활용신청 → 인증키 발급
# 주의: data.ex.co.kr 키와 별도! Base64 인코딩된 긴 문자열
DATA_GO_KR_API_KEY=your_data_go_kr_api_key_here

# CloudFlare R2 Storage (S3 compatible - Sprint 2)
# 설정: https://dash.cloudflare.com → R2 → Create bucket → Manage R2 API Tokens
# 무료: 10GB 저장, 1M Class A ops/월, 10M Class B ops/월, egress 무료
STORAGE_PROVIDER=r2
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=menu-images
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# Redis Cache (for OCR result caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# Automation System (사무실 PC 24시간 자동 DB 확충)
# ============================================

# Ollama Local LLM (콘텐츠 생성 - $0)
# 설치: https://ollama.com/download/windows
# 모델: ollama pull qwen2.5:7b (4.4GB, GPU 8GB 적합)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=120

# Unsplash API (이미지 수집 - 무료 50 req/hr)
# 등록: https://unsplash.com/developers → New Application
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Pixabay API (이미지 수집 - 무료 100 req/min, CC0)
# 등록: https://pixabay.com/api/docs/ → Get API Key
PIXABAY_API_KEY=your_pixabay_api_key_here

# Production DB Sync (FastComet PostgreSQL)
# 직접 연결 불가 시 SQL export 모드로 자동 전환
PRODUCTION_DATABASE_URL=postgresql://user:pass@d11475.sgp1.stableserver.net:5432/chargeap_menu_knowledge

# Scheduler Settings
AUTOMATION_ENABLED=true
DAILY_MENU_TARGET=50

# Application Settings
APP_ENV=development
